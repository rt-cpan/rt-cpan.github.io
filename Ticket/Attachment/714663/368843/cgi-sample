#!/usr/bin/perl

use encoding "utf-8";
use CGI::Session;
use CGI::Cookie;
use CGI qw/:standard/;

my $cookie = cookie('foo') || undef;
my $session = new CGI::Session(undef, $cookie, undef);

print STDERR CGI::Session->errstr() unless $session;

$cookie = cookie('foo' => $session->id);
print header(-charset => 'UTF-8', -cookie => $cookie);
print h1("Hi!");


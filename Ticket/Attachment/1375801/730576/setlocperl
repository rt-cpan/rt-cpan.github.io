#
# Env setups for localizing CPAN-performed perl build/install to CPANLDIR.
#

CPANLDIR=/home/XXX/locperl		# Where CPAN will install

#
# The following are more or less in accordance with instructions given in
# the Local::Lib man page, except that PERL5LIB is set up in .bash_profile
# to include $CPANLDIR, since want to have that even when not running CPAN.
#
PATH="${CPANLDIR}/bin${PATH+:}$PATH";
export PATH;

PERL_LOCAL_LIB_ROOT="${CPANLDIR}${PERL_LOCAL_LIB_ROOT+:}$PERL_LOCAL_LIB_ROOT";
export PERL_LOCAL_LIB_ROOT;

PERL_MB_OPT="--install_base \"${CPANLDIR}\"";
export PERL_MB_OPT;

PERL_MM_OPT="INSTALL_BASE=${CPANLDIR}";
export PERL_MM_OPT;

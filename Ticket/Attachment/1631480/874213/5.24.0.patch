 sub _par_loader_hint {
   require Perl::APIReference::Generator;
-  require Perl::APIReference::V5_022_002;
+  require Perl::APIReference::V5_024_000;
 }
 
 our %Perls = (
+  5.024000 => 'V5_024_000',
   5.022002 => 'V5_022_002',
   5.022001 => 'V5_022_001',
   5.022    => 'V5_022_000',
@@ -63,9 +64,10 @@ our %Perls = (
   5.006    => 'V5_006_000',
 );
 
-our $NewestAPI       = '5.022002';
-our $NewestStableAPI = '5.022002';
+our $NewestAPI       = '5.024000';
+our $NewestStableAPI = '5.024000';
 
+$Perls{'5.024000'} = $Perls{5.024};
 $Perls{'5.022000'} = $Perls{5.022};
 $Perls{'5.020'}    = $Perls{5.02};
 $Perls{'5.020000'} = $Perls{5.02};

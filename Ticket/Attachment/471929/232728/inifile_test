#!/usr/bin/perl

use warnings;
use strict;

use Data::Dumper;
use Config::IniFiles;

warn Config::IniFiles->VERSION;

my $ini = Config::IniFiles->new ( -file => *DATA );
print Dumper {
    ini_object => $ini,
    ini_error => \@Config::IniFiles::errors,
};


__DATA__

;this is a malformed ini file with values placed without any section header

key1 = val1

[sect2]

key2 = val2

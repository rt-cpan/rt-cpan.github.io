#!/usr/local/bin/perl
# illustrate a bug with Term::Query::query_table 2.0;
# Entering an empty response causes an immediate exit, so that
# we never get as far as item2.

use Term::Query	qw(query_table);

my $value1;
my $value2;

my @qt1 = ('item1', 'sV', [\$value1]);
my @qt2 = ('item2', 'sV', [\$value2]);
my $qt_ref = [@qt1, @qt2];

query_table($qt_ref);

exit 0;

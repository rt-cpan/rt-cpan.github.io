#!/bin/bash

# Start at levels 2, 3, 4, 5
# S99, K01

PIDFILE=/var/run/metabase-relayd.pid

case $1 in
	start)
		(
			echo $$ > $PIDFILE
			exec /usr/local/bin/metabase-relayd>>/var/log/metabase-relay.log 2>&1
		)&
		;;
	stop)
		kill `cat $PIDFILE`
		rm -f $PIDFILE
		;;
	restart)
		$0 stop
		$0 start
		;;
	*)
		echo "usage: $0 {start|stop|restart}"
		;;
	esac
exit 0

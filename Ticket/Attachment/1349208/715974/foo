#! perl
package Foo;

use strict;
use warnings;

use Types::XSD qw[ NonNegativeInteger ];
use Type::Params qw[ validate ];

use if $ENV{USE_MOO}, 'Moo';


if ( $ENV{USE_MOO} ) {

    has( ccd =>
        is  => 'ro',
        isa => NonNegativeInteger [ maxInclusive => 9 ],
    );

    Foo->new( ccd => 10 );
}


validate( [10], NonNegativeInteger [ maxInclusive => 9 ] );

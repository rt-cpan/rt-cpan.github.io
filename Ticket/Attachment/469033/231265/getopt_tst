#!/usr/bin/perl

use warnings;
use strict;

use Getopt::Long qw/:config auto_abbrev bundling/;

warn Getopt::Long->VERSION;

my $args = {
    a => \&opt,
    l => \&opt,
    all => \&opt,
    stuff => \&opt,
};

my @opts = $ENV{MULTIOPT} ? (qw/a l all stuff|s/) : (qw/a l all stuff/);

GetOptions ($args, @opts);   #don't check return, irrelevant

sub opt { warn "want $_[0]" }

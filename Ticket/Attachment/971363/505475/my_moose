#!/usr/bin/env perl

use 5.014;

use strict;
use warnings;

package Foo;
{
  use Moose;
  use MooseX::SemiAffordanceAccessor;

  has 'bar', ( is => 'rw', );
  has 'baz', ( is => 'rw', );

}

package main;
my $foo = Foo->new()
        -> set_bar( 'test' )
        -> set_baz( 7 )
        ;

say 'foo->bar is ', $foo->bar, "\tfoo->baz is ", $foo->baz;

=cut

use Pod::Usage;

## Has message, "POD" formatted, SYNOPSIS section only.
# pod2usage(-message => "Before POD");

## No message, "MAN" formatted, all sections.
# pod2usage(-message => "Before POD", -verbose => 2);

## Has message, "POD" formatted, all sections.
# pod2usage(-message => "Before POD", -verbose => 2, -exitval => 2);

## Has message, "POD" formatted, all section.
pod2usage(-message => "Before POD", -verbose => 2, -output => \*STDERR);


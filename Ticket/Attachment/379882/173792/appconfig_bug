#!/usr/bin/perl

use strict;
use warnings;

use AppConfig qw( :expand );

my $config = AppConfig->new;

# define options
$config->define( follow => {
    ACTION  => sub { 0 },       # If this is set to 1, everything passes
} );

# Manually set options
$config->set( 'follow', "you" );

# Get command line options
$config->getopt or die "Option processing failed\n";

# Get options from file
$config->file( "at_test.rc" ) or die "Failed parsing file at_test.rc\n";

print config->get( 'follow' ), "\n";

exit;



#!/usr/bin/perl

use warnings;
use strict;
use 5.010;
use diagnostics;

use constant PRIMES_LIMIT => 1000;
use constant  ROOT_PRIMES_LIMIT => sqrt PRIMES_LIMIT;

our @primes=(3);
my $number=3;

#build data of primes
while($primes[-1]<=ROOT_PRIMES_LIMIT){
  push @primes,$number if &isprime($number+=2);
}
#say "@primes";

sub isprime{
  my $number=shift;
  for(grep $_<=sqrt $number,@primes){
    return 0 unless $number % $_;
  }
  1;
}

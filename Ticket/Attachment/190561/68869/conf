# $Id: sfmirrord.conf,v 1.3 2006/04/20 00:35:21 cbt013 Exp $
#

loglevel	info

<database>
  datasource	dbi:mysql:mirrordb:localhost
  username	sfmirrord
  password	pAsSwOrD!
</database>

<mirror SFfailover>
  daemon	sfsyncd
  mirrorhost	localhost
  loglevel	info

  <cvs /cvsroot>
    dest	/tmp/mirror		# $mirrorhost:/tmp/mirror/cvsroot
  </cvs>

  <twiki /var/www/htdocs/twiki/data>
    dest	/tmp/mirror		# $mirrorhost:/tmp/mirror/var/www/htdocs/twiki/data
  </twiki>

  <directory /var/log/>
     dest	/tmp/mirror/logs	# $mirrorhost:/tmp/mirror/logs
  </directory>

  <file /etc/passwd>
     dest	/tmp/mirror		# $mirrorhost:/tmp/mirror/etc/passwd
  </file>
</mirror>


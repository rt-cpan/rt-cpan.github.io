use Benchmark qw(cmpthese);
use perl5i::2;
use List::Gen qw(range);
use List::Util qw(shuffle);

my $MAX = 10;
my $PICKS = 2;

my $p5i_array = [1..$MAX];
my $gen = range 1, $MAX;
my $lu  = [1..$MAX];

cmpthese(shift || -3, {
    perl5i      => sub { my $picks = $p5i_array->pick($PICKS) },
    list_gen    => sub { my $picks = $gen->pick($PICKS) },
    list_util   => sub { my $picks = (shuffle(@$lu))[0..$PICKS-1] }
});

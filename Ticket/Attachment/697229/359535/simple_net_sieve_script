#!/usr/bin/perl

use Net::Sieve;

my $name_script="first";

my $SieveServer = Net::Sieve->new (
	server => '10.129.1.101',
	port => '2000',
	user => 'username',
	password => 'password',
#	sslkeyfile => '/home/earbatov/Desktop/Mail_soritng/flt1-key.pem',
#	sslcertfile => '/home/earbatov/Desktop/Mail_soritng/flt1-crt.pem',
#	ssl_verif => '0x00',
#	authzid => 'username',
#	debug => '1',
#	dumptlsinfo => '1',
);

my $script='
  require "fileinto";
  if header :contains "Subject" "[Test]" {
          fileinto "Test";
  }
';

$SieveServer->put($name_script,$script);
$SieveServer->activate($name_script);


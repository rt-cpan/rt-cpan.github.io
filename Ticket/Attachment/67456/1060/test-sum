#!/usr/bin/perl -w

use lib 'blib/lib';

use XML::XPath;
use strict;

my $xml = q{
            <AAA>
              <BBB>10</BBB>
              <BBB>5</BBB>
              <BBB>7</BBB>
            </AAA>
           };

my $xp = XML::XPath->new(xml => $xml);

my $count = $xp->findvalue('count(//BBB)');
print "count of BBB is $count\n";

my $sum = $xp->findvalue('sum(//BBB)');
print "sum of BBB is $sum\n";

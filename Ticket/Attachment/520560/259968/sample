#!/usr/bin/perl -w
use Astro::Coord::ECI;
use Astro::Coord::ECI::Moon;
use Astro::Coord::ECI::Utils qw{deg2rad};	# TRW

my $lat=54.58;
my $long=18.39;
my $alt=0;

my $moon = Astro::Coord::ECI::Moon->new ();
# TRW my $sta = Astro::Coord::ECI->universal(time() )->geodetic ($lat, $long, $alt);
my $sta = Astro::Coord::ECI->universal(time() )->geodetic (deg2rad($lat), deg2rad($long), $alt);	# TRW
my ($time, $rise) = $sta->next_elevation ($moon);
print scalar localtime (time),"\n";
print "Moon @{[$rise ? 'rise' : 'set']} is ",scalar localtime $time,"\n";


PerlSwitches -I/home/dbrook/dev/Gitalist/local-lib5/lib/perl5 \
	     -I/home/dbrook/dev/Gitalist/local-lib5/lib/perl5/i486-linux-gnu-thread-multi \
	     -I/home/dbrook/dev/Gitalist \
	     -I/home/dbrook/dev/Gitalist/lib
<VirtualHost *:80>
	ServerAdmin broq@cpan.org

	#PerlConfigRequire /home/dbrook/dev/Gitalist/script/env
	PerlModule Gitalist

	DocumentRoot /home/dbrook/dev/Gitalist/root

	AllowEncodedSlashes On

	<Location />
		SetHandler          modperl
		PerlResponseHandler Gitalist
	</Location>
        <Location /static>
            SetHandler          default-handler
        </Location>

	ErrorLog /var/log/apache2/gitalist-error.log
	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel debug
	CustomLog /var/log/apache2/gitalist-access.log combined
</VirtualHost>

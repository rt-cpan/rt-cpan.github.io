#!/usr/local/bin/perl
# t3	20070126	NHA
# problem illustrations for Config::Std

use Config::Std { def_sep => ':' };

read_config 't3.in' => my %cfg;

foreach my $item (qw{first second third}) {
    if ('ARRAY' eq ref $cfg{section}->{$item}) {
	print "$item is '", join(q{','} => @{$cfg{section}->{$item}}), "'\n";
    }
    else {
	print "$item is '$cfg{section}->{$item}'\n";
    }
    $cfg{section}->{$item} = [$cfg{section}->{$item}, 'me too'];
}
$cfg{section}->{zero} = ['another value'];

write_config %cfg, 't3.out';

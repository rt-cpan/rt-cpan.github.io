#!/usr/bin/env perl5
use warnings;
use strict;
use 5.010;
use List::MoreUtils qw(any);

my $val = 1;

given( $val ){
    when(1) {

        say 'any()  ' . (( any{ 14 == $_ } 10..15) ? 'works' : 'broken' );
    }
}

given( $val ){
    when(1) {

        say 'grep() ' . (( grep{ 14 == $_ } 10..15) ? 'works' : 'broken' );
    }
}
